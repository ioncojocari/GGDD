<layout>
    <data>
        <variable
            name="task"
            type="com.ioncoj.data.models.Task"/>
        <variable
            name="checked"
            type="Boolean"/>
        <variable
            name="enabled"
            type="Boolean"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/half_small_margin"
        android:paddingBottom="@dimen/half_small_margin"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:paddingRight="@dimen/toolbar_inline"
        android:paddingLeft="@dimen/half_toolbar_inline"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBaseline="@+id/checkbox"
            android:layout_toStartOf="@+id/checkbox"
            android:text="@{task.title}" />
        <CheckBox
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:enabled="@{enabled}"
            android:checked="@{checked}"
            android:id="@+id/checkbox"/>
    </LinearLayout>
</layout>